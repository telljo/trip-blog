<%= form_with(id: "post_comment_reply_form", model: [trip, post, post_comment_reply]) do |form| %>
  <div class="form d-flex flex-column gap-2 p-2">
    <div class="form__field d-flex flex-row gap-1 align-items-center">
      <% if Current.user.profile_picture.attached? %>
        <%= image_tag Current.user.image_as_thumbnail, class:"rounded-circle", style:"height: 22px; width: 22px;" %>
      <% else %>
        <i
          class="bi bi-person-circle"
          style="font-size: 1.3em; color: white;"
        ></i>
      <% end %>
      <%= form.text_field :content,
        class: "form-control",
        placeholder: "Add a reply" %>

      <div class="d-flex justify-content-start gap-2" role="group">
        <% if post_comment_reply.persisted? %>
          <%= form.submit "Update", class: "btn btn-success" %>
          <%= link_to "Cancel", trip_url(@post_comment_reply.trip),
            type:"button",
            class: "btn btn-secondary w-3" %>
        <% else %>
          <%= form.submit "Send", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>