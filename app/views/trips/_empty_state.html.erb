<div
  class="container-md d-flex flex-column justify-content-center text-center border border-light-subtle rounded p-3"
>
  <i
    class="bi bi-emoji-tear-fill"
    style="font-size: 3em;"
  ></i>

  <p class="m-0">
    <%= message %>
  </p>

  <div class="d-flex justify-content-center">
    <% if @user && @user == Current.user  %>
      <%= link_to "Create new trip",
        new_trip_path,
        class: "btn btn-success",
        style: "max-width: 10em",
        data: { turbo_frame: dom_id(Trip.new) } %>
    <% end %>
  </div>
</div>