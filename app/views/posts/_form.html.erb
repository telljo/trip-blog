<%= form_with(id: "post_form", model: [@trip, @post]) do |form| %>
  <div class="form d-flex flex-column gap-2">
    <div class="form__field">
      <%= form.text_field :title,
        class: "form-control",
        placeholder: "Add a title",
        autofocus: true %>
    </div>

    <div class="form__field">
      <%= form.rich_text_area :body,
        placeholder: "Add a trip description",
        class: "form-control rounded-top-0",
        size: "20x3", required: true %>
    </div>

    <div class="d-flex flex-row gap-2 flex-wrap">
      <div style="max-width: 400px;">
        <label for="formFile" class="form-label">Upload files</label>
        <%= form.file_field :attachments, multiple: true, accept: '.png,.jpeg,.mp4,.avi,.mov', class: "form-control", id:"formFile" %>
      </div>

      <div class="form__field d-flex flex-row gap-1 align-items-end">
        <%= form.hidden_field :latitude, id: "latitudeValue" %>
        <%= form.hidden_field :longitude, id: "longitudeValue" %>

        <div class="d-flex flex-column">
          <label class="form-label">Set location</label>
          <div class="d-flex flex-row gap-1">
            <input id="addressValue" value="<%= @post.address %>" type="text" name="selectedLocation"
              class="form-control" placeholder="No location chosen" readonly>
            <%= link_to "Set location",
              search_geolocations_path(
                latitude: post.latitude,
                longitude: post.longitude,
                address: post.address
              ),
              class: "btn btn-primary",
              style: "height: 38px; width: 300px;",
              data: { turbo_frame: "modal" },
              type: "button" %>

            <script>
              window.addEventListener('location:selected', function(event) {
                const latitudeField = document.getElementById('latitudeValue');
                const longitudeField = document.getElementById('longitudeValue');
                const addressField = document.getElementById('addressValue');

                latitudeField.value = event.detail.latitude;
                longitudeField.value = event.detail.longitude;
                addressField.value = event.detail.address;
              });
            </script>
          </div>
        </div>
      </div>
    </div>

    <% if @post.attachments.attached? %>
      <div class="d-flex flex-row gap-4 mt-3">
        <% @post.attachments.each do |attachment| %>
          <div class="d-flex flex-column gap-2 position-relative">
            <%= link_to remove_attachment_trip_post_path(trip_id: @trip, post_id: @post.id, id: attachment.id),
              class:"btn btn-danger d-flex justify-content-center align-items-center position-absolute top-0 end-0 mt-1 me-1",
              style:"height: 40px; width: 40px; z-index: 200;",
              data: { turbo_confirm: 'Are you sure?', turbo_method: :delete } do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
            <%= form.hidden_field :attachments, multiple: true, value: attachment.signed_id %>
            <span
              style="height: 150px; width: 150px;"
              class="d-flex justify-content-center align-items-center"
            >
              <% if attachment.image? %>
                <%= image_tag(@post.image_as_small(attachment)) %>
              <% else %>
                <%= video_tag url_for(attachment), controls: true, style: "height: 150px; width: 150px;" %>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @trip %>
      <%= form.hidden_field :trip_id, value: @trip.id %>
    <% else %>
      <%= form.hidden_field :trip_id, value: @post.trip.id %>
    <% end %>

    <div class="d-flex justify-content-start gap-2" role="group">
      <%= form.submit class: "btn btn-success" %>
      <%= link_to "Cancel", trip_url(@trip),
          type:"button",
          class: "btn btn-secondary w-3" %>
    </div>

    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>