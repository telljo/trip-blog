<%= form_with url: users_search_path,
  method: :get,
  data: {
    controller: "search-users",
    turbo_frame: "user-list",
    turbo_stream: true
  } do |form| %>
  <%= form.text_field :username,
        placeholder: "Search for a user",
        class: "form-control",
        input_html: { autofocus: true },
        data: {
          'search-users-target': "searchInput",
          action: "input->search-users#search"
        }
  %>
<% end %>