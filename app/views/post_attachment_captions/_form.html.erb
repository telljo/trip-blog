<%= form_with(id: "post_attachment_caption_form", model: [post, post_attachment_caption]) do |form| %>
  <div class="form d-flex flex-column gap-2 p-2">
    <div class="form__field d-flex flex-row gap-1 align-items-center">
      <%= form.text_field :text,
        class: "form-control",
        placeholder: "Add a caption" %>

      <div class="d-flex justify-content-start gap-2" role="group">
        <% if post_attachment_caption.persisted? %>
          <%= form.submit "Update", class: "btn btn-success" %>
        <% else %>
          <%= form.submit "Add", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>